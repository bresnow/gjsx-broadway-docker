{
  "name": "gjsx-broadway",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "node esbuild.mjs",
    "deploy": "docker stack deploy -c docker-stack.yml gjsx",
    "dev_ws": "docker stack deploy -c docker/development-stack.yml dev_workspace",
    "format": "yarn prettier src/**/*.{ts,js} --write",
    "image": "docker-compose -f docker-compose.yml",
    "start": "gjs -m _compiled/src/main.js",
    "watch": "yarn compile --watch"
  },
  "keywords": [
    "typescript",
    "gtk",
    "gnome",
    "broadway"
  ],
  "version": "1.0.0",
  "repository": "git@github.com:bresnow/gjsx-broadway-docker.git",
  "author": "bresnow <bresnow@me.com>",
  "license": "MIT",
  "devDependencies": {
    "@gi-types/cairo1": "^1.0.1",
    "@gi-types/gtk": "^3.24.9",
    "@gi-types/webkit2": "^2.30.8",
    "@types/prettier": "^2.7.1",
    "chokidar": "^3.5.3"
  },
  "dependencies": {
    "esbuild": "^0.15.11",
    "prettier": "^2.7.1",
    "zx": "^7.1.1"
  }
}